---
export interface Props {
    title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props;
---

<a class="flex gap-10 p-5" href="#">
    <div class="flex items-center gap-10 p-3">
        <img class="w-[400px] h-32 object-cover rounded-xl" src=`./${image}` alt="Reproductor Musical" />
    </div>
    <div class="w-full flex justify-evenly flex-col ml-8">
        <div>
            <h3 class="text-32 font-title">{title}</h3>
        </div>
        <div>
            <p class="text-[#4c4c4b] text-18 font-text">{description}</p>
        </div>
    </div>
</a>