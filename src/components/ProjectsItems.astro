---
import { techSVGs } from '../data/projects.js'

export interface Props {
    id: string;
    title: string;
    description: string;
    image: string;
    link?: string;
    technologies: string[];
}
const { id, title, description, image, link, technologies } = Astro.props;
---

<div class="flex gap-10 p-5 flex-col md:flex-row">
    <div class="flex items-center gap-5 md:gap-10 p-0 md:p-3">
        <img class="w-full md:w-[400px] h-32 object-cover rounded-xl" src=`./${image}` alt="Reproductor Musical" />
    </div>
    <div class="w-full flex justify-start ml-0 md:ml-8">
        <div class="self-center">
            <div>
                <h3 class="text-32 font-title dark:text-white">{title}</h3>
            </div>
            <div>
                <p class="text-[#4c4c4b] dark:text-[#c9c9c9] text-16 font-text mb-2">{description}</p>
            </div>
            <div class="flex flex-col md:flex-row gap-2 md:gap-5 items-start md:items-center">
                <a class="text-white bg-black rounded-full font-title px-6 py-2 dark:border dark:border-slate-700/100 dark:hover:bg-white dark:hover:text-black transition-all duration-100 ease-in" target="_blank" href=`${link}`>Visit</a>
                <div class="flex items-center gap-5 rounded-full border-dashed border-2 border-slate-900/50 dark:border-white px-6 py-2">
                    {technologies.map(tech => 
                        <img width="24" src={techSVGs[tech]} alt={tech} />
                    )}
                </div>
                
            </div>
        </div>
        <div class="absolute right-3 text-9xl bottom-28 md:top-6 font-title -z-10 text-76 text-[#08080817] dark:text-[#90feff0d]">
            {id}
        </div>
    </div>
</div>
